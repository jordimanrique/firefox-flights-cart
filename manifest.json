{
  "description": "Demonstrating toolbar buttons",
  "manifest_version": 2,
  "name": "button-demo",
  "version": "1.0",

  "browser_action": {
    "browser_style": true,
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/airplane_16.png"
    }
  },
  "permissions": [
      "storage",
      "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/carrito*"],
      "js": [
        "js/lib/jquery.js",
        "js/contentScript.js"
      ]
    }
  ]
}